<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid
                android:color="#ffffff"/>
        </shape>
    </item>

    <item android:top="-100dp"
        android:gravity="top"
        android:bottom="0dp"
        android:left="-120dp"
        android:right="-120dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape
                android:shape="oval">

               <solid
                   android:color="#575deb"/>
            </shape>
        </rotate>
    </item>
</layer-list>